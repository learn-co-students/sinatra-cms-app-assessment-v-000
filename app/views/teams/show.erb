<h3>Team</h3>

<p>Name: <%= @team.name %></p>
<p>League: <%= @team.league %></p>
<p>Players:</p>
<br>
<table>
  <tr>
    <th>Name</th> <th>Position</th> <th>Price</th>
  </tr>
  <%@team.players.each do |player| %>
  <tr>
    <td><%= player.name %></td> <td><%= player.position %></td> <td><%= player.price %></td>
  </tr>
  <% end %>
</table>
<br>
<a href="/teams/<%=@team.id%>/edit">Edit Team</a>
<br>
<form method="post" action="/teams/<%=@team.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input class="btn btn-primary" type="submit" value="Delete Team">
</form>
