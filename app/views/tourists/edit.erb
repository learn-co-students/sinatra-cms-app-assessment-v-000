<h1>Edit <%= @tourist.name %></h1>

<form action="/tourists/<%=@tourist.id %>" method="POST">
  <label> Tourist Name </label>
  <input type="text" name="name" value="<%=@tourist.name %>"> </br>

  <label> Tourist Nationality </label>
  <input type="text" name="nationality" value="<%=@tourist.nationality%>"> </br>

  <label> Which Tourist does this belong in? </label>
  <select name="cruise_ship_id">

    <% current_user.cruise_ships.each do |cruise_ship| %>
      <option value=<%=cruise_ship.id %> <%= "selected" if cruise_ship.id==@tourist.cruise_ship.id %> ><%= cruise_ship.name %></option>

    <% end %>
  </select>

  <input type="submit" value="Update">
</form>